<!DOCTYPE html>
<html class="landing" lang="en">
<head>
  <% include ../partials/header %>
</head>

<body>

<div class="landing-container">
  <div class="left">
    <h1 class="brand">Housekeeper</h1>
  </div>



  <div class="landing-sidebar">
    <div class="sidebar-links">
      <span id="showLogIn" class="link">Log in</span>
      <span id="showSignUp" class="link">Sign up</span>
    </div>


    <form id="login-form" class="" action="/login" method="post">

      <% if(error && error.length > 0){ %>
            <div class="flash-message error" role="alert">
                <%= error %>
            </div>
      <% } %>

      <% if(success && success.length > 0){ %>
            <div class="flash-message success" role="alert">
                <%= success %>
            </div>
      <% } %>

      <h3 class="form-title">Log in</h3>
      <div class="form-group">
        <label for="username">Username</label>
        <input name="username" id="username-login" type="text">
      </div>

      <div class="form-group">
        <label for="username">Password</label>
        <input name="password" id="password-login" type="password">
      </div>

      <button class="waves-effect waves-light btn">Sign in</button>

    </form>

    <form id="signup-form" action="/signup" method="post">

      <% if(error && error.length > 0){ %>
            <div class="flash-message error" role="alert">
                <%= error %>
            </div>
      <% } %>

      <h3 class="form-title">Sign up</h3>
      <div class="form-group">
        <label for="username-signup">Username</label>
        <input name ="username" id="username-signup" type="text">
      </div>

      <div class="form-group">
        <label for="email-signup">E-mail</label>
        <input name="email" id="email-signup" type="email" class="validate">
      </div>

      <div class="form-group">
        <label for="firstname">First name</label>
        <input name="firstname" id="firstname" type="text">
      </div>

      <div class="form-group">
        <label for="lastname">Last name</label>
        <input name="lastname" id="lastname" type="text">
      </div>

      <div class="form-group">
        <label for="company">Company</label>
        <input name="company" id="company" type="text">
      </div>

      <div class="form-group">
        <label for="password-signup">Password</label>
        <input name="password" id="password-signup" type="password">
      </div>

      <div class="form-group">
        <label for="password-signup-repeat">Repeat Password</label>
        <input name="passwordrepeat" id="password-signup-repeat" type="password">
      </div>

      <button class="waves-effect waves-light btn">Sign Up</button>

    </form>
  </div>
</div>


<script src="./scripts/showFormSession.js"></script>
<% include ../partials/footer %>
